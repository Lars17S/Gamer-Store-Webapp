  "license": "MIT",
  "scripts": {
    "frontend": "cd store-frontend && yarn start",
    "backend": "cd store-backend && nodemon --exec ts-node src/index.ts",
    "start": "cd store-frontend && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn run backend\" \"yarn run frontend\"",
    "heroku-postbuild": "cd store-frontend && yarn install && yarn run build"
  },
  "keywords": [
    "heroku"
  ],
  "engines": {
    "node": "16.x",
    "yarn": "1.x"
  }
}
